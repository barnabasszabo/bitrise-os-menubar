{
  "name": "bitrise-os-menubar",
  "version": "0.0.1",
  "main": "main.js",
  "private": true,

  "build": {
		"appId": "hu.szabobarnabas.bitrise-os-menubar",
		"productName": "Bitrise OS Menubar",
		"mac": {
			"category": "public.app-category.developer-tools"
		},
		"dmg": {
			"icon": false
		},
		"linux": {
			"target": ["AppImage"],
			"category": "Development"
		}
	},

  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
		"build": "electron-builder --mac --windows --linux",
		"release": "electron-builder --mac --windows --linux --publish always"
  },

  "devDependencies": {
    "electron": "^11.0.3",
    "electron-builder": "^22.9.1"
  },

  "dependencies": {
    "menubar": "^9.0.1"
  }

}
